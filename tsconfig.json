{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "types": ["node"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"]
  },
  "include": ["**/*.ts"]
}
